{
    "compilerOptions": {
        "outDir": "./build",
        "rootDir": "./src",
        "baseUrl": ".",

        "target": "es2017",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": false,
        "skipLibCheck": true,
        "typeRoots": ["./src/@types", "node_modules/@types"]
    }
}
